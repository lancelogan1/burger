{{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto.

* Create a button in `index.handlebars` that will submit the user input into the database. --}}


  

{{!-- /Burgs --}}
<div class="container">
    <div class="row">
        <div class="col-12 text-center jumbotron" id="top-bar">
            <h1>I like Burgers</h1>
        </div>
        <div class="col-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-9 text-center">
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div>
                <div class="col-12 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value="{{this.id}}">          
                        <button type="submit" class="btn btn-danger btn-sm ml-10">Devour</button>
                    </form><br>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
{{!-- Eaten burgs --}}
        <div class="col-6 text-center" class="task">
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>
<br>

{{!-- Add a burg --}}
<div class="container">
    <div class="row">
        <div class=" col-12 text center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control" value="" id="enter_text" placeholder="Enter a burger to add to your list">
                <br>
                <button type="submit" class="btn btn-danger btn-lg btn-block" id="text-enter-button">Submit</button>
            </form>
            <br>
            
        </div>
    </div>
</div>




